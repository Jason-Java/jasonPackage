        <attr name="ja_shadowOffsetRight" />
        <attr name="ja_shadowOffsetTop" />
        <attr name="ja_shadowOffsetBottom" />
        <!--        阴影颜色-->
        <attr name="ja_shadowColor" />


    </declare-styleable>

