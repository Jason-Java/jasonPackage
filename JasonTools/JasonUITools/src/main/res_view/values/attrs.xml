        <attr name="ja_leftBottomRadius" />
        <attr name="ja_rightBottomRadius" />
        <!--        背景相关-->
        <attr name="ja_bgColorPress" />
        <attr name="ja_bgColor" />
        <!--        文字颜色相关-->
        <attr name="ja_textColorPress" />
        <attr name="ja_textColor" />
