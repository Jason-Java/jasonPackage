    <attr name="ja_leftTopRadius" format="dimension" />
    <attr name="ja_rightTopRadius" format="dimension" />
    <attr name="ja_leftBottomRadius" format="dimension" />
    <attr name="ja_rightBottomRadius" format="dimension" />
    <!--按压背景色-->
    <attr name="ja_pressBackground" format="reference|color" />
    <!-- 是否可选-->
    <attr name="ja_selected" format="boolean" />
    <!--选中背景色-->
    <attr name="ja_selectedBackground" format="reference|color" />
    <!--阴影半径-->
