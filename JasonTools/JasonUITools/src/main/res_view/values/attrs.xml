    <declare-styleable name="JasonSpinner">
        <!--        边框相关-->
        <attr name="ja_strokeWidth" />
        <attr name="ja_strokeLeftWidth" />
        <attr name="ja_strokeRightWidth" />
        <attr name="ja_strokeTopWidth" />
        <attr name="ja_strokeBottomWidth" />
        <attr name="ja_strokeColorPress" />
        <attr name="ja_strokeColor" />
        <!--    圆角相关-->
        <attr name="ja_radius" />
        <attr name="ja_leftTopRadius" />
        <attr name="ja_rightTopRadius" />
        <attr name="ja_leftBottomRadius" />
        <attr name="ja_rightBottomRadius" />

        <!--        背景相关-->
        <attr name="ja_bgColor" />
        <!--        箭头方向-->
        <attr name="ja_arrowDirection">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="JasonIconButton">
        <!--    圆角相关 圆角设置仅对纯色背景有效，如果背景是图片则无效-->
        <attr name="ja_radius" />
        <attr name="ja_leftTopRadius" />
        <attr name="ja_rightTopRadius" />
        <attr name="ja_leftBottomRadius" />
        <attr name="ja_rightBottomRadius" />

        <!--        内部布局-->
        <attr name="ja_orientation">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1" />
        </attr>
        <attr name="ja_gravity">
            <flag name="center_horizontal" value="0" />
            <flag name="center_vertical" value="1" />
        </attr>
        <!--        文字布局-->
        <attr name="ja_textOrientation">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1" />
        </attr>
        <!--        icon-->
        <attr name="ja_icon" format="reference" />
        <attr name="ja_iconTop" format="dimension" />
        <attr name="ja_iconLeft" format="dimension" />

        <!--        文字相关-->
        <attr name="ja_text" />
        <attr name="ja_textColor" />
        <attr name="ja_textSize" />
        <attr name="ja_textTop" format="dimension" />
        <attr name="ja_textLeft" format="dimension" />
        <attr name="ja_background" />


        <!--按压背景色-->
        <attr name="ja_pressBackground" />
        <!-- 是否可选-->
        <attr name="ja_selected" />
        <!--选中背景色-->
        <attr name="ja_selectedBackground" />
        <!--阴影半径-->
        <attr name="ja_shadowRadius" />
        <!--        阴影偏移量-->
