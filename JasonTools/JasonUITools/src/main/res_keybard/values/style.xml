<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="jason_keyboard_letter_symbol_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/jason_keyboard_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="json_keyboard_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>
</resources>